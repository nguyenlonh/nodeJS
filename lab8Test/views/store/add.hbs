<form action="/store/add/{{_id}}" method="post" class="container col-md-8 card bg-warning mt-3">
   <h1 class="text-danger text-uppercase text-center mt-3">Add Product</h1>
   <div class="form-group mt-3">
      <label for="name" class="text-primary">Name</label>
    <input class="form-control" type="text" name="name" required minlength="3" maxlength="30">
   </div>

   <div class="form-group mt-3">
    <label for="size" class="text-primary">Size</label>
    <input class="form-control" type="text" name="size" min="0" max="100">
   </div>

   <div class="form-group mt-3">
    <label for="size" class="text-primary">Color</label>
    <input class="form-control" type="text" name="color" min="0" max="100">
   </div>

   <div class="form-group mt-3">
    <label for="size" class="text-primary">Price</label>
    <input class="form-control" type="number" name="price" >
   </div>

    <div class="form-group mt-3">
    <label for="size" class="text-primary">Description</label>
    <input class="form-control" type="text" name="des" >
   </div>

   <div class="form-group mt-3">
      <label for="image" class="text-primary">Image</label>
      <input class="form-control" type="url" name="image" required>
   </div>

<div class="form-group mt-3 mb-3 text-center">
      <input class="btn btn-primary" type="submit" value="Add">
      <input class="btn btn-success" type="reset" value="Clear">
   </div>
</form>


